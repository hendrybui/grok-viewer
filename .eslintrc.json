{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-inner-declarations": "off",
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["src/renderer/**/*.js"],
      "env": {
        "browser": true,
        "node": false
      },
      "globals": {
        "window": "readonly"
      }
    },
    {
      "files": ["main.js", "src/main/**/*.js"],
      "env": {
        "node": true,
        "browser": false
      }
    }
  ]
}
