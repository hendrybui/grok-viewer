{
  "name": "grok-viewer",
  "version": "1.0.0",
  "description": "A glossy local media viewer for Neo Imagine files",
  "main": "main.js",
  "author": "Your Name",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.yourbusiness.grokviewer",
    "productName": "Grok Viewer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^24.9.1"
  },
  "preload": "C:\\Users\\kentb\\grok-viewer\\preload.js",
  "dependencies": {
    "electron-store": "^11.0.2",
    "sharp": "^0.33.5"
  }
}
