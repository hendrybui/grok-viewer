{
  "name": "grok-viewer",
  "version": "1.0.0",
  "description": "A glossy local media viewer for Neo Imagine files",
  "main": "main.js",
  "author": "hendrybui",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "node test-upgrades.js",
    "lint": "eslint main.js src/**/*.js"
  },
  "build": {
    "appId": "com.hendrybui.grokviewer",
    "productName": "Grok Viewer",
    "publish": {
      "provider": "github",
      "owner": "hendrybui",
      "repo": "grok-viewer"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.2"
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "electron-updater": "^6.7.3",
    "requirements": "^3.0.0",
    "sharp": "^0.34.5"
  }
}
